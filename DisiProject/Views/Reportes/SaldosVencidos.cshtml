@model List<DisiProject.Models.PortalClientes.Saldo>

@{
    ViewBag.Title = "Documentos cedidos vencidos.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
  {
  <div class="container kv-main">
    <div class="page-header">
        <h1>Documento <small> cedidos vencidos.</small>
        </h1>
    </div>
    <div class="table-responsive">
<table id="example" class="table table-striped table-bordered" width="100%" cellspacing="0">
<thead>
<tr>
    <th style="width:10px;">ID</th>
    <th style="width:170px;">Descripció</th>
    <th style="width:20px;">MonoEstimadoTrimestre</th>
    <th style="width:20px;">MonoEstimadoAnual</th>
    <th style="width:170px;">Observaciones</th>
    <th style="width:30px; text-align:center;">Exportar</th>
</tr>
</thead>
<tfoot>
<tr>
    <th style="width:10px;">ID</th>
    <th style="width:170px;">Descripció</th>
    <th style="width:20px;">MonoEstimadoTrimestre</th>
    <th style="width:20px;">MonoEstimadoAnual</th>
    <th style="width:170px;">Observaciones</th>
    <th style="width:30px;">Exportar</th>
</tr>
</tfoot>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fiIdSaldoCredito)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fcDescripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fdMontoEstimadoTrim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fdMontoEstimadoAnual)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fcObservaciones)
        </td>
        <td style="text-align:center;"><input type="image" name="image" src="~/Images/excel.ico" width="35"></td>
    </tr>
}
</tbody>
</table>
</div>
    </div>
  }
@Styles.Render("~/Content/datatables")

@section Scripts {
    @Scripts.Render("~/Scripts/datatables")

    <script type="text/javascript" language="javascript">

        /* Table initialization */
        $(document).ready(function () {
            $('#example').dataTable();
        });

    </script>
}

