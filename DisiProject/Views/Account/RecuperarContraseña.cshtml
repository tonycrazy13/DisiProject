

<h2>Recuperar contraseña olvidada o bloqueada</h2>

@using System.Web.UI.WebControls
@using DisiProject.Common
@model DisiProject.Models.CorreoModel
@{
    ViewBag.Title = "RecuperarContraseña";
}

 @if(Request.UrlReferrer != null)
        {
            <div style=" text-align: right;">
                <input type="image" src="~/Content/themes/base/images/regresar.png" name="backButton" onclick="history.go(-1); return false;" width="30px" height="30px" >

            </div>
        }


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)



    <fieldset>
        <legend>Ingrese su correo electronico</legend>

       

        @if (ViewBag.Error != null)
        {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Error!</strong> @ViewBag.Error
                </div>
        }
            @if (ViewBag.Successful != null)
            {
                <div class="alert alert-success">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Correcto!</strong> @ViewBag.Successful
                </div>
                
                
            }



            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                <div class="">@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    <p class="help-block">@Html.ValidationMessageFor(m => m.Email)</p>
                </div>
            </div>


            <div class="form-group">
                <div class="">
                    <button class="btn btn-primary">Enviar
                        <span class="glyphicon glyphicon-log-in"></span></button>
                </div>
            </div>

        
           

    </fieldset>
}
