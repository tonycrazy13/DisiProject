@using DisiProject.Common
@model DisiProject.Models.Contacto

@{
    ViewBag.Title = "Crear";
}

@section nav {
    @Html.Partial("_AdminMenuPartial")
}

<h2>Nuevo contacto</h2>

<section id="crearContactosForm">
