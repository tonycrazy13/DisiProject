        <div class="editor-field">
            @Html.EditorFor(model => model.Sexo)
            @Html.ValidationMessageFor(model => model.Sexo)
        </div>      
        <div class="editor-field">
            @Html.DropDownListFor(model => model.IdEstadoCivil, (IEnumerable<SelectListItem>)null, "Seleccione Edo. Civil", new {style = "width:190px"})
        </div>  
       <div class="editor-field">
            @Html.DropDownListFor(model => model.IdTipoContacto, (IEnumerable<SelectListItem>)null, "Seleccione tipo contacto", new {style = "width:190px"})
        </div> 
        <div class="editor-field">
            @Html.DropDownListFor(model => model.IdTipoPersona, (IEnumerable<SelectListItem>)null, "Seleccione tipo persona", new {style = "width:190px"})
        </div> 

        <p>
            @Html.ActionLink("Direcciones", "Direccion", new { id=Model.IdContacto })
        </p>
        <p>
            <input type="submit" value="Crear" />
        </p>
           
    </fieldset>
}

    <div>
        @Html.ActionLink("Regresar", "Index")
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
