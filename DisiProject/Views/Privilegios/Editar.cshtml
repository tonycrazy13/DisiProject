
@model DisiProject.Models.AreaPrivilegio


@{
    ViewBag.Title = "Editar";
}

<h2>Roles y Privilegios</h2>


<section id="Editar">
@using (Html.BeginForm())
{
    
    
     <div class="form-group">
                <label for="Areas">Areas</label>
               <div class=""> @Html.TextBoxFor(m=>m.Area.ID)
                <p class="help-block">@Html.ValidationMessageFor(m => m.Area.ID)</p>     
               </div>
                <div class=""> @Html.TextBoxFor(m=>m.Area.DESCRIPCION)
                <p class="help-block">@Html.ValidationMessageFor(m => m.Area.DESCRIPCION)</p>     
               </div>
        </div>

        
       <div class="form-group">
                @Html.LabelFor(m => m.Permiso, new { @class = "control-label" })
               <div class=""> @Html.DropDownListFor(m=>m.Permiso.IdPermiso, ViewBag.Permisos as IEnumerable<SelectListItem>,  new {style = "width:290px"})
                    <p class="help-block">@Html.ValidationMessageFor(m => m.Permiso.IdPermiso)</p>
                </div>
            </div>
    
    
           
        
    
      <div class="form-group">
                <div class="">
                    <button class="btn btn-primary"> Editar
                        <span class="glyphicon glyphicon-log-in"></span></button>
                </div>
            </div>
         
   <div>
            @Html.ActionLink("Regresar", "Index")
    </div>
}
</section>