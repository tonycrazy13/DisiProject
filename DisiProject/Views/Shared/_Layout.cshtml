</head>

<body>
    <nav class="navbar navbar-inverse" role="navigation">
    <!-- El logotipo y el icono que despliega el menú se agrupan
    para mostrarlos mejor en los dispositivos móviles -->
    <div class ="container">
    <div class="navbar-header">
        
        @if (@Session["UserFullName"] != null)
        {
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target=".navbar-ex1-collapse">
                <span class="sr-only">Desplegar navegación</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        }

        <a class="navbar-brand" href="#">DisiProject</a>
    </div>

    @if (@Session["UserFullName"] != null)
    {
        <!-- Agrupar los enlaces de navegación, los formularios y cualquier
        otro elemento que se pueda ocultar al minimizar la barra -->


        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav">
                @(Convert.ToInt32(Session["IdEmpleado"]) != 1 ? Html.Partial("_MenuSistema") : Html.Partial("_PortalClientes"))
            </ul>
           @* @(Convert.ToInt32(Session["IdEmpleado"]) != 1 ? Html.Partial("_MenuBuscar") : Html.Partial("_MenuBuscar"))
         *@  <ul class="nav navbar-nav navbar-right">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    }
        </div>
        </nav >
  
<div class="container">
    

    @RenderSection("featured", required: false)
    @RenderBody()
    
    

</div>





